pidfile=${pidfile:-/run/${SVCNAME}.pid}
miner_config=${miner_config:-/etc/cpuminer/${SVCNAME}.conf}
command="/usr/bin/cpuminer"
command_args="-qS -c ${miner_config} ${miner_args}"
start_stop_daemon_args="-bm -N ${NICELEVEL:-20}"

depend() {
    need net
}
